<UserControl x:Class="JobOverview.View.UCSaisieTemps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:JobOverview.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600" Background="White">
    <UserControl.Resources>
        <!-- Style associé aux DatePicker -->
        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <TextBox
                        Text="{Binding Path=SelectedDate, StringFormat='dd MMM yyyy', 
                        RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}"
                            VerticalContentAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Style associé aux boutons -->
        <Style TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <!-- Style associé aux ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Width" Value="80"/>
            <Setter Property="SelectedIndex" Value="0"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SelectedIndex" Value="0"/>
        </Style>
        <!-- Style associé aux TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <DataTemplate x:Key="TextBoxGridView">
            <TextBox Text="{Binding RelativeSource={RelativeSource Self}, 
                            Path=TachesProd/TravauxProd/Heures}"
                            IsEnabled="{Binding ElementName=Edition, Path=IsChecked}"/>
        </DataTemplate>
        <DataTemplate x:Key="CheckBoxGridView">
            <CheckBox Name="Edition" />
        </DataTemplate>
    </UserControl.Resources>
    <DockPanel>
        <!-- DatePicker + Combobox + Compteur -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Center" 
                    HorizontalAlignment="Left" Width="600" >
            <DatePicker SelectedDate="{Binding Path=DateSelectionnee}" 
                        BorderThickness="0" VerticalAlignment="Center"/>
            <Label Content="Logiciel"/>
            <ComboBox ItemsSource="{Binding Path=Logiciels}" DisplayMemberPath="NomLogiciel" 
                      IsSynchronizedWithCurrentItem="True" Width="100"
                      Name="cb_Log" SelectedValue="{Binding Path=NomLogiciel}"/>
            <Label Content="Version"/>
            <ComboBox ItemsSource="{Binding Path=Logiciels/Versions}" DisplayMemberPath="NumVersion" 
                      IsSynchronizedWithCurrentItem="True" Width="40"
                      Name="cb_Ver" SelectedValue="{Binding Path=NumVersion}"/>
            <TextBlock Text="Heure(s) restante(s) :" Margin="10,5,0,5"/>
            <TextBlock Text="{Binding Path=HeureRestante}" Margin="5" HorizontalAlignment="Right"/>
        </StackPanel>
        <!-- Bouton "Enregistrer" -->
        <Button DockPanel.Dock="Bottom" Content="Enregistrer" Grid.Row="2" HorizontalAlignment="Right"/>
        <!-- Listes + filtres -->
        <Grid>
            <!-- Création de 2 lignes et 2 colonnes-->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- Colonne 0 : Liste des tâches de production -->
            <DockPanel VerticalAlignment="Top">
                <Label Content="Tâches de production" Foreground="Blue"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <CheckBox VerticalAlignment="Center"/>
                    <Label Content="Terminées"/>
                    <CheckBox VerticalAlignment="Center" IsChecked="True"/>
                    <Label Content="En cours"/>
                </StackPanel>
            </DockPanel>
            <DockPanel Grid.Row="1">
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                    <Label Content="Description" Foreground="Blue"/>
                    <TextBlock Text=""/>
                </StackPanel>
                <!-- Affichage des taches de production de la personne connectée-->
                <ListView Grid.Row="1" DataContext="{Binding Path=TachesProd}">
                    <ListView.View>
                        <GridView AllowsColumnReorder="True">
                            <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Path=NomTache}"/>
                            <GridViewColumn Header="Prévu (j)" DisplayMemberBinding="{Binding Path=DureePrevue}"/>
                            <GridViewColumn Header="Restant (j)" DisplayMemberBinding="{Binding Path=DureeRestante}"/>
                            <GridViewColumn Header="Heure(s)" CellTemplate="{StaticResource TextBoxGridView}"/>
                            <GridViewColumn Header="Edition" CellTemplate="{StaticResource CheckBoxGridView}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
            <!-- Colonne 1 : Liste des tâches annexes -->
            <Label Grid.Column="1" Content="Tâches annexes" Foreground="Blue"/>
            <ListView Grid.Column="1" Grid.Row="1" DataContext="{Binding Path=TachesAnnexe}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Path=NomTache}"/>
                        <GridViewColumn Header="Activité" DisplayMemberBinding="{Binding Path=CodeActivite}"/>
                        <GridViewColumn Header="Heure(s)" CellTemplate="{StaticResource TextBoxGridView}"/>
                        <GridViewColumn Header="Edition" CellTemplate="{StaticResource CheckBoxGridView}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </DockPanel>
</UserControl>
